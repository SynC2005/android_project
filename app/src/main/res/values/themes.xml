<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Sigmachatv2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Warna utama -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna sekunder -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar & navigasi -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>

        <!-- Input field, tombol, dan komponen lainnya -->
        <item name="colorSurface">@color/input_bg</item>
        <item name="colorError">@color/error</item>

        <!-- Default text color -->
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>
